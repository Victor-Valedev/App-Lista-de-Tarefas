<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjetoListaTarefas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primaria_dark</item>
        <item name="colorPrimaryVariant">@color/primaria_variacao_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secundaria_dark</item>
        <item name="colorSecondaryVariant">@color/secundaria_variacao_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/fundodark</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="BACKGROUNDBTN">
        <item name="android:backgroundTint">@color/secundaria_dark</item>
    </style>
    <style name="TEXTCOLOR">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>